{
  "openapi": "3.0.0",
  "info": {
    "title": "Example API",
    "version": "1.0.0",
    "description": "An example API for demonstration purposes."
  },
  "servers": [
    {
      "url": "http://localhost:8081"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Gets a greeting message (Public Route)",
        "responses": {
          "200": {
            "description": "A successful response",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Hello, world! This is a public route."
                }
              }
            }
          }
        }
      }
    },
    "/protected": {
      "get": {
        "summary": "Gets a protected route",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "A successful response",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Protected route"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
